{
  // Custom color settings for VS Code workbench elements
  "workbench.colorCustomizations": {
    // Activity bar (left sidebar) customizations
    "activityBar.activeBackground": "#ab307e",    // Background color when active
    "activityBar.background": "#ab307e",          // Default background color
    "activityBar.foreground": "#e7e7e7",         // Icon color
    "activityBar.inactiveForeground": "#e7e7e799", // Inactive icon color

    // Activity bar badge customizations (notification indicators)
    "activityBarBadge.background": "#25320e",     // Badge background color
    "activityBarBadge.foreground": "#e7e7e7",     // Badge text color

    // Command center customizations
    "commandCenter.border": "#e7e7e799",          // Border color for command center

    // Sash customizations (divider between panels)
    "sash.hoverBorder": "#ab307e",               // Border color when hovering over sash

    // Status bar customizations (bottom bar)
    "statusBar.background": "#832561",            // Background color
    "statusBar.foreground": "#e7e7e7",           // Text color
    "statusBarItem.hoverBackground": "#ab307e",   // Background color when hovering
    "statusBarItem.remoteBackground": "#832561",  // Background color for remote connection indicator
    "statusBarItem.remoteForeground": "#e7e7e7",  // Text color for remote connection indicator

    // Title bar customizations (top bar)
    "titleBar.activeBackground": "#832561",       // Background color when active
    "titleBar.activeForeground": "#e7e7e7",      // Text color when active
    "titleBar.inactiveBackground": "#83256199",   // Background color when inactive
    "titleBar.inactiveForeground": "#e7e7e799"   // Text color when inactive
  },

  // Peacock extension color setting
  "peacock.color": "#832561"                      // Base color for Peacock extension theming
}